<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:int-stream="http://www.springframework.org/schema/integration/stream"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/integration
		http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/integration/stream
		http://www.springframework.org/schema/integration/stream/spring-integration-stream.xsd">

	<int:annotation-config/>

	<context:component-scan base-package="Engine.XEngine"/>

	<int:gateway id="registration" service-interface="Engine.SpringApp.Registration"/>

	<int:channel id="registrations"/>
	<int:channel id="sources"><int:queue capacity="10"/></int:channel>
	<int:channel id="services"><int:queue capacity="10"/></int:channel>

	<int:channel id="sourceRegistrator"/>
	<int:channel id="serviceRegistrator"/>

	<int:bridge input-channel="sources" output-channel="sourceRegistrator">
		<int:poller fixed-delay="1000"/>
	</int:bridge>

	<int:bridge input-channel="services" output-channel="serviceRegistrator">
		<int:poller fixed-delay="1000"/>
	</int:bridge>

	<int-stream:stdout-channel-adapter id="registeredServices"/>
	<int-stream:stdout-channel-adapter id="registeredSources"/>

</beans:beans>
